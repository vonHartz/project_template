  #!/bin/bash
  set -e  # Stop on first failure
  {% endraw %}

  python -m {{cookiecutter.package_name}}.run \
    {% raw %}parition={{partition}} \
    seed=range\(0,{{repeats}}\) \
    max_jobs={{max_parallel_jobs}}{% endraw %}
